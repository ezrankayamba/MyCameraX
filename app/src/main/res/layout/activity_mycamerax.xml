<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyCameraXActivity"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
        <TextureView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/view_finder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom"
            android:background="@android:color/transparent" android:padding="16dp">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_flash_on_white_24dp"
                android:id="@+id/btnFlash" android:layout_weight="1"
                android:background="@android:color/transparent" android:contentDescription="@string/todo"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_camera_capture_48dp"
                android:id="@+id/btnCapture" android:layout_weight="1" android:background="@android:color/transparent"
                android:contentDescription="@string/todo"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_camera_back_front_switch_48dp"
                android:id="@+id/btnBackFront" android:layout_weight="1"
                android:background="@android:color/transparent" android:contentDescription="@string/todo"/>
    </LinearLayout>
</FrameLayout>